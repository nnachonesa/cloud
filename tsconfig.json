{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2019",
    "outDir": "./dist",
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": true,
    "sourceMap": false,
    "incremental": false,
    "resolveJsonModule": true,
    "esModuleInterop":true,
    "declaration":true
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*"]
}